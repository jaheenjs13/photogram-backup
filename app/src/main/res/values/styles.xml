<resources>
    <!-- Main App Theme - Modern Premium Dark -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/brand_primary</item>
        <item name="colorPrimaryDark">@color/brand_primary_dark</item>
        <item name="colorAccent">@color/brand_accent</item>
        <item name="android:windowBackground">@color/surface_bg</item>
        <item name="android:statusBarColor">@color/brand_primary_dark</item>
        <item name="android:navigationBarColor">@color/surface_bg</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>
    
    <!-- Card Style -->
    <style name="CardStyle">
        <item name="android:background">@drawable/card_background</item>
        <item name="android:padding">16dp</item>
    </style>
    
    <!-- Primary Button -->
    <style name="PrimaryButton">
        <item name="android:background">@drawable/btn_primary</item>
        <item name="android:textColor">@color/text_white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="android:paddingTop">14dp</item>
        <item name="android:paddingBottom">14dp</item>
        <item name="android:textAllCaps">false</item>
    </style>
    
    <!-- Secondary Button -->
    <style name="SecondaryButton">
        <item name="android:background">@drawable/btn_secondary</item>
        <item name="android:textColor">@color/brand_primary</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:textAllCaps">false</item>
    </style>
    
    <!-- Input Field -->
    <style name="InputField">
        <item name="android:background">@drawable/input_background</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textColorHint">@color/text_tertiary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">16dp</item>
    </style>
    
    <!-- Title Text -->
    <style name="TitleText">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:letterSpacing">-0.02</item>
    </style>
    
    <!-- Subtitle Text -->
    <style name="SubtitleText">
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingMultiplier">1.4</item>
    </style>
    
    <!-- Section Header -->
    <style name="SectionHeader">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>
</resources>