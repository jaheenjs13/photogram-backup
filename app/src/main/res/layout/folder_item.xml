<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:layout_marginTop="6dp"
    android:layout_marginBottom="6dp"
    android:background="@drawable/card_ripple"
    android:orientation="horizontal"
    android:padding="18dp" 
    android:gravity="center_vertical"
    android:clickable="true"
    android:focusable="true">

    <!-- Folder Icon with Background -->
    <FrameLayout
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="@drawable/icon_bg">
        
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_folder_modern"
            android:tint="@color/brand_primary" />
    </FrameLayout>

    <!-- Folder Info -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="12dp">

        <TextView
            android:id="@+id/folderName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:textColor="@color/text_primary"
            android:textStyle="bold"
            android:letterSpacing="-0.01"
            android:maxLines="1"
            android:ellipsize="end" />

        <TextView
            android:id="@+id/folderPath"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/text_tertiary"
            android:layout_marginTop="2dp"
            android:ellipsize="end"
            android:maxLines="1" />

        <TextView
            android:id="@+id/folderPhotoCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0 photos"
            android:textSize="11sp"
            android:textColor="@color/brand_primary"
            android:layout_marginTop="4dp"
            android:textStyle="bold"
            android:textAllCaps="true" />
    </LinearLayout>

    <!-- Toggle Switch -->
    <Switch
        android:id="@+id/backupSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:thumbTint="@color/brand_primary" />

</LinearLayout>