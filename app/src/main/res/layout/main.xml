<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/surface_bg">

    <!-- Modern Header with Gradient -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dashboard_modern_bg"
        android:orientation="vertical"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:paddingTop="32dp"
        android:paddingBottom="52dp"
        android:elevation="6dp">

        <TextView
            android:id="@+id/tvTotalStats"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0 Items Saved"
            android:textColor="@color/text_white"
            android:textSize="34sp"
            android:textStyle="bold"
            android:letterSpacing="-0.02" />

        <TextView
            android:id="@+id/tvSyncStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cloud Sync Active"
            android:textColor="#CCFFFFFF"
            android:textSize="14sp"
            android:layout_marginTop="2dp"
            android:alpha="0.85" />

        <ProgressBar
            android:id="@+id/pbSync"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:layout_marginTop="20dp"
            android:progressDrawable="@drawable/progress_bar_custom"
            android:visibility="gone"
            android:max="100" />
            
        <TextView
            android:id="@+id/tvCurrentFile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Syncing..."
            android:textColor="#B3FFFFFF"
            android:textSize="11sp"
            android:layout_marginTop="8dp"
            android:visibility="gone"
            android:singleLine="true"
            android:ellipsize="middle" />

        <!-- Quick Actions Bar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="28dp"
            android:gravity="center_vertical">

            <Button
                android:id="@+id/btnStartBackup"
                android:layout_width="0dp"
                android:layout_height="54dp"
                android:layout_weight="1.2"
                android:text="Sync Now"
                android:textAllCaps="false"
                android:background="@drawable/button_white_bg"
                android:textColor="@color/brand_primary"
                android:textStyle="bold"
                android:textSize="15sp"
                android:elevation="3dp" />

            <Space 
                android:layout_width="12dp" 
                android:layout_height="0dp"/>

            <ImageButton
                android:id="@+id/btnDashboard"
                android:layout_width="54dp"
                android:layout_height="54dp"
                android:src="@drawable/ic_dashboard"
                android:background="@drawable/button_white_bg"
                android:padding="15dp"
                android:elevation="3dp"
                android:scaleType="fitCenter"
                android:contentDescription="Dashboard" />

            <Space 
                android:layout_width="10dp" 
                android:layout_height="0dp"/>

            <ImageButton
                android:id="@+id/btnHistory"
                android:layout_width="54dp"
                android:layout_height="54dp"
                android:src="@drawable/ic_history"
                android:background="@drawable/button_white_bg"
                android:padding="15dp"
                android:elevation="3dp"
                android:scaleType="fitCenter"
                android:contentDescription="History" />

            <Space 
                android:layout_width="10dp" 
                android:layout_height="0dp"/>

            <ImageButton
                android:id="@+id/btnLogs"
                android:layout_width="54dp"
                android:layout_height="54dp"
                android:src="@drawable/ic_logs"
                android:background="@drawable/button_white_bg"
                android:padding="15dp"
                android:elevation="3dp"
                android:scaleType="fitCenter"
                android:contentDescription="Logs" />

            <Space 
                android:layout_width="10dp" 
                android:layout_height="0dp"/>

            <ImageButton
                android:id="@+id/btnSettings"
                android:layout_width="54dp"
                android:layout_height="54dp"
                android:src="@drawable/ic_settings"
                android:background="@drawable/button_white_bg"
                android:padding="15dp"
                android:elevation="3dp"
                android:scaleType="fitCenter"
                android:contentDescription="Settings" />
        </LinearLayout>
    </LinearLayout>

    <!-- Floating Search Bar -->
    <EditText
        android:id="@+id/etSearch"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:layout_below="@id/header"
        android:layout_marginTop="-29dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:background="@drawable/search_bar_bg"
        android:elevation="12dp"
        android:hint="Search folders..."
        android:textColorHint="@color/text_tertiary"
        android:textColor="@color/text_primary"
        android:paddingLeft="22dp"
        android:paddingRight="22dp"
        android:drawableLeft="@drawable/ic_search_premium"
        android:drawablePadding="14dp"
        android:singleLine="true"
        android:textSize="15sp"
        android:importantForAutofill="no"
        android:inputType="text" />

    <!-- Statistics Card -->
    <include 
        android:id="@+id/statsCard"
        layout="@layout/stats_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/etSearch"
        android:layout_marginTop="16dp" />

    <!-- Bulk Action Buttons -->
    <LinearLayout
        android:id="@+id/bulkActions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/statsCard"
        android:orientation="horizontal"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="12dp"
        android:paddingBottom="4dp">

        <Button
            android:id="@+id/btnSelectAll"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_weight="1"
            android:text="Select All"
            android:textAllCaps="false"
            android:background="@drawable/button_secondary_bg"
            android:textColor="@color/text_primary"
            android:textSize="14sp"
            android:textStyle="bold"
            android:letterSpacing="0.01" />

        <Space
            android:layout_width="12dp"
            android:layout_height="0dp" />

        <Button
            android:id="@+id/btnDeselectAll"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_weight="1"
            android:text="Deselect All"
            android:textAllCaps="false"
            android:background="@drawable/button_secondary_bg"
            android:textColor="@color/text_primary"
            android:textSize="14sp"
            android:textStyle="bold"
            android:letterSpacing="0.01" />
    </LinearLayout>

    <!-- Swipe to Refresh -->
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipeRefresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/bulkActions"
        android:layout_marginTop="16dp">

        <!-- Folder List -->
        <ListView
            android:id="@+id/folderListView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@null"
            android:dividerHeight="0dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="8dp" 
            android:paddingBottom="24dp"
            android:clipToPadding="false"
            android:scrollbars="none"
            android:overScrollMode="never" />
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
</RelativeLayout>